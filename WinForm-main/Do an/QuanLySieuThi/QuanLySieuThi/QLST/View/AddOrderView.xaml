<Window x:Class="QLST.View.AddOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLST.View"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        x:Name="AddOrderwd"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        DataContext="{StaticResource AddOrderVM}"
        Height="650" 
        Width="1500" WindowStartupLocation="CenterScreen">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Loadwd}"
                                   CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border
        x:Name="xx"
        CornerRadius="15"
        Background="White"
        BorderBrush="#97af8f"
        BorderThickness="2"
        >
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding MoveWindow}"
                                       CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="250"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                >
                    <materialDesign:PackIcon Kind="WindowMinimize" Foreground="#97af8f" Height="24" Width="24" Margin="0,0,8,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Minimizewd}"
                                                       CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                    <materialDesign:PackIcon Kind="CloseThick" Foreground="#97af8f" Height="24" Width="24">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding Closewd}"
                                                       CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </materialDesign:PackIcon>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border
                        Margin="8,0,0,0"
                        Height="40"
                        Width="120"
                        CornerRadius="10"
                        Background="#97af8f"
                        >
                        <ComboBox
                            x:Name="cbxchon"
                            Style="{StaticResource MaterialDesignFilledComboBox}"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="8,-9,0,0"
                            materialDesign:HintAssist.Hint="Bộ lọc"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            BorderThickness="0"
                            materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                            materialDesign:HintAssist.Foreground="White"
                            Background="#97af8f"
                            FontFamily="{StaticResource Custom}"
                            Height="38"
                            FontSize="14"
                            SelectedIndex="0"
                            Width="110">
                            <ComboBoxItem Content="Tất cả"/>
                            <ComboBoxItem Content="Đồ uống"/>
                            <ComboBoxItem Content="Đồ uống có ga"/>
                            <ComboBoxItem Content="Bánh"/>
                            <ComboBoxItem Content="SP Tiêu Dùng"/>
                            <ComboBoxItem Content="SP Đông Lạnh"/>
                            <ComboBoxItem Content="Trái cây đóng hộp"/>
                            <ComboBoxItem Content="Vật dụng gia đình"/>
                            <ComboBoxItem Content="Thực Phẩm"/>
                            <ComboBoxItem Content="Lương thực"/>
                            <ComboBoxItem Content="Gia Vị"/>
                            <ComboBoxItem Content="SP Tiêu Dùng"/>
                            <ComboBoxItem Content="Đồ Ăn Đóng Hộp"/>
                            <ComboBoxItem Content="Đồ gia dụng"/>
                            <ComboBoxItem Content="Đồ Ăn Lạnh"/>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding Filter}"
                                   CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ComboBox>
                    </Border>
                    <TextBox
                            x:Name="txbSearch"
                            Width="300"
                            Height="40"
                            Margin="10,0,0,0"
                            BorderBrush="Black"
                            Foreground="Black"
                            FontSize="16"
                            FontWeight="SemiBold"
                            materialDesign:HintAssist.Hint="Tìm Kiếm"
                            materialDesign:HintAssist.FontFamily="{StaticResource Custom}"
                            materialDesign:HintAssist.Foreground="#97af8f"
                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,3,0,0"
                            BorderThickness="2"
                            VerticalAlignment="Center" CaretBrush="White" >
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <i:InvokeCommandAction Command="{Binding SearchCommand}"
                                   CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                </StackPanel>
                <TextBlock
                    Grid.Column="1"
                    Text="HÓA ĐƠN"
                    Foreground="#97af8f"
                    FontFamily="{StaticResource Custom}"
                    FontSize="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    />
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Border
                        Margin="20,0,20,0"
                        Background="White"
                        CornerRadius="15"
                        >
                        <StackPanel
                            Margin="10"
                            >
                            <TextBlock
                                Margin="0,10,0,5"
                                Text="THÔNG TIN HÓA ĐƠN"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                Foreground="#97af8f"
                                />
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="MÃ ND"
                                        Foreground="#97af8f"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                        Foreground="#97af8f"
                                    Text="|"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                    <TextBlock
                                    Margin="4,0,0,0"
                                        Foreground="#97af8f"
                                    Text="TÊN ND"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            x:Name="MaND"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                        <TextBox
                                            Text="|"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                        <TextBox
                                            x:Name="TenND"
                                            HorizontalAlignment="Left"
                                            FontFamily="{StaticResource Custom}"
                                            BorderThickness="0"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                            IsEnabled="False"
                                            materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <TextBlock
                                    Margin="8,0,0,0"
                                        Foreground="#97af8f"
                                    Text="HỌ TÊN KHÁCH HÀNG"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                </StackPanel>
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <ComboBox
                                        x:Name="KH"
                                        FontFamily="{StaticResource Custom}"
                                        BorderThickness="0"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        IsEditable="True"
                                        DisplayMemberPath="HOTEN"
                                        ItemsSource="{Binding LKH}" Width="260"
                                        >
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding chooseKH}"
                                                       CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Text="THỜI GIAN"
                                    Foreground="#97af8f"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="Ngay"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Foreground="#97af8f"
                                    Text="SỐ HÓA ĐƠN"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="SoHD"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid Grid.Column="2">
                    <Border
                        Margin="20,0,20,0"
                        Background="White"
                        CornerRadius="15"
                        >
                        <StackPanel
                            Margin="10"
                            >
                            <TextBlock
                                Margin="0,10,0,5"
                                Text="CHI TIẾT HÓA ĐƠN"
                                Foreground="#97af8f"
                                FontFamily="{StaticResource Custom}"
                                HorizontalAlignment="Center"
                                />
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Foreground="#97af8f"
                                    Text="TÊN SẢN PHẨM"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <StackPanel>
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <ComboBox
                                                x:Name="SP"
                                                FontFamily="{StaticResource Custom}"
                                                BorderThickness="0"
                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                ItemsSource="{Binding LSP}"
                                                 Width="268"
                                            IsEditable="False"
                                            DisplayMemberPath="TENSP"
                                                HorizontalAlignment="Center"
                                                >
                                            
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="SelectionChanged">
                                                    <i:InvokeCommandAction Command="{Binding Choose}"
                                                                  CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </ComboBox>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Margin="0,2,0,0">
                                <TextBlock
                                    Margin="8,0,0,0"
                                    Foreground="#97af8f"
                                    Text="ĐƠN GIÁ"
                                    FontFamily="{StaticResource Custom}"
                                />
                                <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                    <TextBox
                                    x:Name="DG"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                <StackPanel
                                    Width="140"
                                    >
                                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="SỐ LƯỢNG"
                                        Foreground="#97af8f"
                                    FontFamily="{StaticResource Custom}"
                                    />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10">
                                        <TextBox
                                    x:Name="SL"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0" Width="138"/>
                                    </Border>
                                </StackPanel>
                                <StackPanel Width="140" Margin="10,0,0,0">
                                    <TextBlock
                                    Margin="8,0,0,0"
                                    Text="KHUYẾN MÃI"
                                        Foreground="#97af8f"
                                    FontFamily="{StaticResource Custom}"
                                />
                                    <Border BorderThickness="2" BorderBrush="Gray" CornerRadius="10" Width="136">
                                        <TextBox
                                    x:Name="khuyenmai"
                                    HorizontalAlignment="Left"
                                    FontFamily="{StaticResource Custom}"
                                    BorderThickness="0"
                                    IsEnabled="False"
                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="10"
                                    materialDesign:TextFieldAssist.TextBoxViewMargin="10,0,0,0"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                Margin="20"
                                Orientation="Horizontal"
                                >
                                <Button
                                    BorderThickness="0"
                                    Content="THÊM"
                                    FontSize="12"
                                    x:Name="addbtn"
                                    FontFamily="{StaticResource Custom}"
                                    Background="#97af8f"
                                >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding AddSP}"
                                                            CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button 
                                    BorderThickness="0"
                                    Margin="6,0,0,0"
                                    Content="XÓA"
                                    FontSize="12"
                                    x:Name="deletebtn"
                                    FontFamily="{StaticResource Custom}"
                                    Background="#97af8f"
                                >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     Command="{Binding DeleteSP}"
                                                           CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                                <Button
                                    BorderThickness="0"
                                    Margin="6,0,0,0"
                                    Content="THANH TOÁN"
                                    FontSize="12"
                                    FontFamily="{StaticResource Custom}"
                                    x:Name="ttbtn"
                                    Background="#97af8f"
                                >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Click">
                                            <i:InvokeCommandAction     
                                                            Command="{Binding SaveHD}"
                                                            CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1">
                    <Border
                        Margin="-7,10,0,0"
                        Width="730"
                        Height="40"
                        CornerRadius="10"
                        Background="#97af8f"
                        >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock
                                Text="MÃ SP"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                    Foreground="White"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock
                                Margin="2,0,0,0"
                                HorizontalAlignment="Left"
                                Text="TÊN SP"
                                VerticalAlignment="Center"
                                    Foreground="White"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="2">
                                <TextBlock
                                Text="SIZE"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource Custom}"
                                    Foreground="White"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="3">
                                <TextBlock
                                Text="SL"
                                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                    Foreground="White"
                                                MaxWidth="150"
                                FontFamily="{StaticResource Custom}"
                                FontSize="12"
                                />
                            </Grid>
                            <Grid Grid.Column="4">
                                <TextBlock
                                Text="THÀNH TIỀN"
                                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                                MaxWidth="150"
                                FontFamily="{StaticResource Custom}"
                                    Foreground="White"
                                FontSize="12"
                                />
                            </Grid>
                        </Grid>
                    </Border>
                    <ListView x:Name="ListViewSP" 
                          SelectionMode="Single"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          Height="164"
                        >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                Margin="0,0,0,0"
                                Width="730"
                                Height="40"
                                CornerRadius="10"
                                Background="LightGray"
                                >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="180"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <TextBlock
                                            Text="{Binding MaSp}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Custom}"
                                            FontSize="12"
                                        />
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <TextBlock
                                                Margin="2,0,0,0"
                                                HorizontalAlignment="Left"
                                                Text="{Binding TenSP}"
                                                VerticalAlignment="Center"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                        />
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <TextBlock
                                            Text="{Binding Size}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontFamily="{StaticResource Custom}"
                                            FontSize="12"
                                        />
                                        </Grid>
                                        <Grid Grid.Column="3">
                                            <TextBlock
                                                Text="{Binding SL}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                MaxWidth="150"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                />
                                        </Grid>
                                        <Grid Grid.Column="4">
                                            <TextBlock
                                                Text="{Binding Tong,StringFormat={}{0:#.###} VNĐ}"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                MaxWidth="150"
                                                FontFamily="{StaticResource Custom}"
                                                FontSize="12"
                                />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                    </ListView>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <ListView x:Name="ListViewProduct" ItemsSource="{Binding listSP}"
                      SelectionMode="Single"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Hidden" Height="468"
                    >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border
                        Margin="0"
                        Height="210"
                        Width="170"
                        BorderThickness="1"
                BorderBrush="Gray"
                        Background="White"
                        CornerRadius="15"
                        >
                                    <StackPanel>
                                        <Image  
                                    Margin="0,10,0,0"
                                    Source="{Binding HINHSP,StringFormat={}}" 
                                    Height="140" 
                                    Width="130"
                                    />
                                        <TextBlock
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Text="{Binding TENSP}"
                                    />
                                        <TextBlock
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Text="{Binding GIA,StringFormat={}{0:#.###} VNĐ}"
                                    />
                                        <TextBlock
                                    FontFamily="{StaticResource Custom}"
                                    FontSize="14"
                                    HorizontalAlignment="Center"
                                    Text="{Binding LOAISP}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding Choose}"
                                       CommandParameter="{Binding ElementName=AddOrderwd}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ListView>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="4"
                  Margin="0,4,0,0"
                  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="2"
                      HorizontalAlignment="Right"
                      >
                    <StackPanel>
                        <TextBlock
                        Foreground="#97af8f"
                        Text="GIẢM GIÁ: "
                        FontFamily="{StaticResource Custom}"
                        FontSize="16"
                        />
                        <TextBlock
                        Foreground="#97af8f"
                        Text="GIÁ ĐÃ TRỪ KHUYẾN MÃI: "
                        FontFamily="{StaticResource Custom}"
                        FontSize="16"
                        />
                        <TextBlock
                        Foreground="#97af8f"
                        Text="THÀNH TIỀN: "
                        FontFamily="{StaticResource Custom}"
                        FontSize="16"
                        Margin="0,10,0,0"
                        />
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="3">
                    <StackPanel>
                        <TextBlock
                        Foreground="#97af8f"
                            Margin="0,0,30,0"
                        x:Name="GG"
                        FontFamily="{StaticResource Custom}"
                        FontSize="16"
                        HorizontalAlignment="Right"
                        />
                        <TextBlock
                            Foreground="#97af8f"
                            x:Name="TT"
                            Margin="0,0,30,0"
                            FontFamily="{StaticResource Custom}"
                            FontSize="16"
                            HorizontalAlignment="Right"
                        />
                        <TextBlock
                            Foreground="#97af8f"
                            x:Name="TT1"
                            Margin="0,10,30,0"
                            FontFamily="{StaticResource Custom}"
                            FontSize="16"
                            HorizontalAlignment="Right"
                        />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
